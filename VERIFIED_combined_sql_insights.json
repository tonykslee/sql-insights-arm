{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "defaultValue": ""
        },
        "MmaAgentName": {
            "type": "string",
            "metadata": {
                "description": "The name will be Windows: MMAExtension, Linux: OMSExtension."
            }
        },
        "MmaExtensionType": {
            "type": "string",
            "metadata": {
                "description": "MMA Extension Type, Windows: MicrosoftMonitoringAgent, Linux: OmsAgentForLinux."
            }
        },
        "MmaExtensionVersion": {
            "type": "string",
            "metadata": {
               " description": "MMA/OMS Extension Version."
            }
        },
        "VmLocation": {
            "type": "string",
            "metadata": {
                "description": "The Virtual Machine Location."
            }
        },
        "VmName": {
            "type": "string",
            "metadata": {
                "description": "The Virtual Machine Name."
            }
        },
        "VmType": {
            "type": "string",
            "metadata": {
                "description": "VM type: 1. virtualMachines, 2 virtualMachineScaleSets."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2017-03-15-preview",
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[parameters('workspaceName')]",
            "location": "[resourceGroup().location]",
            "resources": [
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "Microsoft.OperationsManagement/solutions",
                    "location": "[resourceGroup().location]",
                    "name": "[Concat('SQLAdvancedThreatProtection', '(', parameters('workspaceName'), ')')]",
                    "dependsOn": [
                        "[Concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    ],
                    "properties": {
                        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    },
                    "plan": {
                        "name": "[Concat('SQLAdvancedThreatProtection', '(', parameters('workspaceName'), ')')]",
                        "product": "OMSGallery/SQLAdvancedThreatProtection",
                        "promotionCode": "",
                        "publisher": "Microsoft"
                    }
                },
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "Microsoft.OperationsManagement/solutions",
                    "location": "[resourceGroup().location]",
                    "name": "[Concat('SQLAssessment', '(', parameters('workspaceName'), ')')]",
                    "dependsOn": [
                        "[Concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    ],
                    "properties": {
                        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    },
                    "plan": {
                        "name": "[Concat('SQLAssessment', '(', parameters('workspaceName'), ')')]",
                        "product": "OMSGallery/SQLAssessment",
                        "promotionCode": "",
                        "publisher": "Microsoft"
                    }
                },
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "Microsoft.OperationsManagement/solutions",
                    "location": "[resourceGroup().location]",
                    "name": "[Concat('SQLVulnerabilityAssessment', '(', parameters('workspaceName'), ')')]",
                    "dependsOn": [
                        "[Concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    ],
                    "properties": {
                        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    },
                    "plan": {
                        "name": "[Concat('SQLVulnerabilityAssessment', '(', parameters('workspaceName'), ')')]",
                        "product": "OMSGallery/SQLVulnerabilityAssessment",
                        "promotionCode": "",
                        "publisher": "Microsoft"
                    }
                },
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "Microsoft.OperationsManagement/solutions",
                    "location": "[resourceGroup().location]",
                    "name": "[Concat('AzureActivity', '(', parameters('workspaceName'), ')')]",
                    "dependsOn": [
                        "[Concat('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    ],
                    "properties": {
                        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                    },
                    "plan": {
                        "name": "[Concat('AzureActivity', '(', parameters('workspaceName'), ')')]",
                        "promotionCode": "",
                        "product": "OMSGallery/AzureActivity",
                        "publisher": "Microsoft"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "[concat('VMInsightsSolutionDeployment', parameters('workspaceName'))]",
            "apiVersion": "2017-05-10",
            "resourceGroup": "[split([resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))],'/')[4]]",
            "subscriptionId": "[split([resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))],'/')[2]]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "apiVersion": "2015-11-01-preview",
                            "type": "Microsoft.OperationsManagement/solutions",
                            "location": "[parameters('WorkspaceLocation')]",
                            "name": "[concat('VMInsights', '(', split([resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))],'/')[8], ')')]",
                            "properties": {
                                "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]"
                            },
                            "plan": {
                                "name": "[concat('VMInsights', '(', split([resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))],'/')[8], ')')]",
                                "product": "[concat('OMSGallery/', 'VMInsights')]",
                                "promotionCode": "",
                                "publisher": "Microsoft"
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "extensions",
            "name": "[parameters('MmaAgentName')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('VmLocation')]",
            "properties": {
                "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                "type": "[parameters('MmaExtensionType')]",
                "typeHandlerVersion": "[parameters('MmaExtensionVersion')]",
                "autoUpgradeMinorVersion": "true",
                "settings": {
                    "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))]",
                    "azureResourceId": "[parameters('VmResourceId')]",
                    "stopOnMultipleConnections": "[variables('stopOnMultipleConnections')]"
                },
                "protectedSettings": {
                    "workspaceKey": "[listKeys([resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName'))], '2015-03-20').primarySharedKey]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/', parameters('VmType'), '/', parameters('VmName'))]"
            ]
        }
    ]
}